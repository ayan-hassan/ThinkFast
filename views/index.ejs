<!DOCTYPE html>
<html lang="en">

  <%- include('partials/_head') %>

  <body>
    <%- include('partials/_header') %>
    <section class="category-filter">
      <div class="cat">
        <button>Science</button>
        <button>History</button>
        <button>Movies</button>
        <button>Music</button>
        <button>Pop Culture</button>
        <button>Video Games</button>
      </div>
      <div class="cat">
        <button>Geography</button>
        <button>Sports</button>
        <button>Language</button>
        <button>Books</button>
        <button>Food</button>
        <button>Miscellaneous</button>
      </div>
    </section>
    <main class="container">
      <div class="container1">
        <aside class="featured-quiz" id="<%= featured.id %>">
          <div class="featured-overlay"> featured quiz</div>
          <div class="quiz-image">
            <img src="<%= featured.photo_url %>">
            <div class="quiz-name-overlay"><%= featured.title %></div>
          </div>
          <footer class="label">
            <div><%= featured.category %></div>
            <div><%= featured.author %></div>
          </footer>
        </aside>
      </div>
      <div class="container2">
        <div class="standard-quiz">
          <% for (let quiz of quizzes) { %>
          <article class="quiz-thumbnail" id="<%= quiz.id %>">
            <div class="quiz-image">
              <img src="<%= quiz.photo_url %>">
              <div class="quiz-name-overlay"><%= quiz.title %></div>
            </div>
            <footer class="label">
              <div><%= quiz.category %></div>
              <div><%= quiz.author %></div>
            </footer>
          </article>
          <% } %>
        </div>
      </div>

    </main>
  </body>
</html>
